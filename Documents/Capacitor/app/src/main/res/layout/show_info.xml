            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/v0"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="20sp"
                    android:layout_weight="0.4"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="@string/BatteryVoltage"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <Button
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:textSize="20sp"
                    android:layout_weight="0.6"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="@string/SleepingPosture"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="25dp"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="140dip"
                    android:layout_height="120dip"
                    android:id="@+id/imgVmain" />

                <Spinner
                    android:layout_width="105dip"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerChoose"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/EstimateAmount"
                        android:id="@+id/textView10"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ml"
                        android:id="@+id/textViewCC"
                        android:textSize="25sp" />
                </LinearLayout>
            </LinearLayout>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/Sound"
                android:id="@+id/soundswitch"
                android:checked="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="-10dp"
                android:text="@string/Fixto80"
                android:id="@+id/switch80"
                android:checked="false" />

            <com.example.Capacitor.CircleView
                android:id="@+id/light"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/sValue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lightYellow"
                android:id="@+id/textView" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/eTD0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Red"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/eTD3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"
                android:id="@+id/btnSet" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sensitivity"
            android:id="@+id/textView9"

            android:gravity="center"
            android:textSize="16sp" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:progress="2" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:background="#c1d6ff"
                android:text="30"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:background="#acc7fe"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"
